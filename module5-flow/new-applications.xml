<?xml version="1.0" encoding="UTF-8"?>
<!-- This is a template/schema for new student applications submitted via Flow → Integration → APIM -->
<application_template>
    <application>
        <application_id>APP-2025-{auto_generated}</application_id>
        <timestamp>{submission_timestamp}</timestamp>
        <personal_info>
            <first_name>{required}</first_name>
            <last_name>{required}</last_name>
            <middle_name>{optional}</middle_name>
            <date_of_birth>{required}</date_of_birth>
            <ssn_last_four>{required}</ssn_last_four>
            <gender>{optional}</gender>
            <citizenship_status>{required}</citizenship_status>
        </personal_info>
        <contact_info>
            <email>{required}</email>
            <phone_primary>{required}</phone_primary>
            <phone_secondary>{optional}</phone_secondary>
            <permanent_address>
                <street>{required}</street>
                <city>{required}</city>
                <state>{required}</state>
                <zip_code>{required}</zip_code>
                <country>{required}</country>
            </permanent_address>
            <mailing_address>
                <same_as_permanent>{boolean}</same_as_permanent>
                <street>{conditional}</street>
                <city>{conditional}</city>
                <state>{conditional}</state>
                <zip_code>{conditional}</zip_code>
                <country>{conditional}</country>
            </mailing_address>
        </contact_info>
        <academic_info>
            <selected_major_code>{required_from_dropdown}</selected_major_code>
            <selected_major_name>{auto_populated}</selected_major_name>
            <intended_start_semester>{required}</intended_start_semester>
            <intended_start_year>{required}</intended_start_year>
            <enrollment_type>{full_time_or_part_time}</enrollment_type>
            <previous_education>
                <high_school>
                    <school_name>{required}</school_name>
                    <graduation_date>{required}</graduation_date>
                    <gpa>{required}</gpa>
                    <class_rank>{optional}</class_rank>
                </high_school>
                <sat_scores>
                    <total>{optional}</total>
                    <math>{optional}</math>
                    <reading>{optional}</reading>
                </sat_scores>
                <act_scores>
                    <composite>{optional}</composite>
                </act_scores>
                <transfer_info>
                    <is_transfer>{boolean}</is_transfer>
                    <previous_institution>{conditional}</previous_institution>
                    <credits_earned>{conditional}</credits_earned>
                    <gpa>{conditional}</gpa>
                </transfer_info>
            </previous_education>
        </academic_info>
        <additional_info>
            <essay_response>{required_min_250_words}</essay_response>
            <extracurricular_activities>{optional_max_500_words}</extracurricular_activities>
            <work_experience>{optional_max_500_words}</work_experience>
            <references>
                <reference>
                    <name>{required}</name>
                    <relationship>{required}</relationship>
                    <email>{required}</email>
                    <phone>{required}</phone>
                </reference>
                <reference>
                    <name>{required}</name>
                    <relationship>{required}</relationship>
                    <email>{required}</email>
                    <phone>{required}</phone>
                </reference>
            </references>
        </additional_info>
        <financial_aid>
            <applying_for_aid>{boolean}</applying_for_aid>
            <fafsa_submitted>{conditional}</fafsa_submitted>
            <family_income_range>{optional}</family_income_range>
        </financial_aid>
        <submission_details>
            <ip_address>{auto_captured}</ip_address>
            <browser_info>{auto_captured}</browser_info>
            <submission_status>Pending Review</submission_status>
            <review_notes></review_notes>
        </submission_details>
    </application>
</application_template>

